{
  "extends": ["airbnb", "plugin:react/recommended", "prettier", "react-app"],

  "plugins": ["prettier"],

  "env": {
    "browser": true,
    "es6": true,
  },

  "rules": {
    "jsx-a11y/label-has-for": [
      "error",
      {
        "components": ["Label"],
        "required": {
          "some": ["nesting", "id"],
        },
        "allowChildren": false,
      },
    ],
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [".js", ".jsx"],
      },
    ],
  },
}
